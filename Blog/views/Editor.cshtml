@using BlogExtensions.Resources

<div class='pure-form pure-g-r'>
    <div class='pure-u-1-2'>
        <input type='text' id='postTitle' class='pure-input-1' placeholder='@Index_Admin.Title' />
    </div>
    <div class='pure-u-1-2'>
        <input type='text' id='txtCategories' class='pure-input-1' placeholder='@Index_Admin.PostedIn' />
    </div>
</div>

<div class="features">
    <section class="editor">
        <div class="outer">
            <div class="editorwrap">
                <section class="entry-markdown active">
                    <header class="floatingheader">
                        &nbsp;&nbsp; @Index_Admin.Markdown
                        <span class="help-button">
                            <a href="#help-popup" class="open-popup-link" tabindex="-1">@Index.Help</a>
                        </span>
                    </header>
                    <section class="entry-markdown-content">
                        <textarea id="entry-markdown"></textarea>
                    </section>

                </section>

                <section class="entry-preview">
                    <header class="floatingheader">
                        &nbsp;&nbsp; @Index_Admin.Preview <abbr class="entry-word-count" title="@Index_Admin.WordCount">0</abbr>
                    </header>
                    <section class="entry-preview-content">
                        <div class="rendered-markdown"></div>

                    </section>
                </section>
            </div>
        </div>
    </section>

    <div id="help-popup" class="white-popup mfp-hide">
        <h3 id="myModalLabel">@Index_Admin.MarkdownHelp</h3>
        <table class="pure-table">
            <thead>
                <tr>
                    <th>@Index_Admin.Result</th>
                    <th>@Index_Admin.Markdown</th>
                    <th>@Index_Admin.Shortcut</th>
                </tr>
            </thead>
            <tbody>
                <tr class="pure-table-odd">
                    <td><strong>Bold</strong></td>
                    <td>**text**</td>
                    <td>Ctrl / Cmd + B</td>
                </tr>
                <tr>
                    <td><em>Emphasize</em></td>
                    <td>__text__</td>
                    <td>Ctrl / Cmd + I</td>
                </tr>
                <tr class="pure-table-odd">
                    <td><code>Inline Code</code></td>
                    <td>`code`</td>
                    <td>Cmd + K / Ctrl + Shift + K</td>
                </tr>
                <tr>
                    <td>Strike-through</td>
                    <td>~~text~~</td>
                    <td>Ctrl + Alt + U</td>
                </tr>
                <tr class="pure-table-odd">
                    <td><a href="#">Link</a></td>
                    <td>[title](http://)</td>
                    <td>Ctrl + Shift + L</td>
                </tr>
                <tr>
                    <td>Image</td>
                    <td>![alt](http://)</td>
                    <td>Ctrl + Shift + I</td>
                </tr>
                <tr class="pure-table-odd">
                    <td>List</td>
                    <td>* item</td>
                    <td>Ctrl + L</td>
                </tr>
                <tr>
                    <td>Blockquote</td>
                    <td>> quote</td>
                    <td>Ctrl + Q</td>
                </tr>
                <tr class="pure-table-odd">
                    <td>H1</td>
                    <td># Heading</td>
                    <td>Ctrl + Alt + 1</td>
                </tr>
                <tr>
                    <td>H2</td>
                    <td>## Heading</td>
                    <td>Ctrl + Alt + 2</td>
                </tr>
                <tr class="pure-table-odd">
                    <td>H3</td>
                    <td>### Heading</td>
                    <td>Ctrl + Alt + 3</td>
                </tr>
                <tr>
                    <td>H4</td>
                    <td>#### Heading</td>
                    <td>Ctrl + Alt + 4</td>
                </tr>
                <tr class="pure-table-odd">
                    <td>H5</td>
                    <td>##### Heading</td>
                    <td>Ctrl + Alt + 5</td>
                </tr>
                <tr>
                    <td>H6</td>
                    <td>###### Heading</td>
                    <td>Ctrl + Alt + 6</td>
                </tr>
                <tr class="pure-table-odd">
                    <td>Select Word</td>
                    <td></td>
                    <td>Ctrl + Alt + W</td>
                </tr>
                <tr>
                    <td>Uppercase</td>
                    <td></td>
                    <td>Ctrl + U</td>
                </tr>
                <tr class="pure-table-odd">
                    <td>Lowercase</td>
                    <td></td>
                    <td>Ctrl + Shift + U</td>
                </tr>
                <tr>
                    <td>Titlecase</td>
                    <td></td>
                    <td>Ctrl + Alt + Shift + U</td>
                </tr>
            </tbody>
        </table>
        <p>
            @Index_Admin.MarkdownReference
            &nbsp;<a href="http://daringfireball.net/projects/markdown/syntax" target="_blank">@Index_Admin.MarkdownDocumentation</a>
        </p>
    </div>

</div> 